<div i18n:domain="deform"
      tal:omit-tag=""
      tal:define="oid oid|field.oid;
                  name name|field.name;
                  css_class css_class|field.widget.css_class;
                  style style|field.widget.style;">
  ${field.start_mapping()}
  <div class="row">
    <div class="col-xs-4"><div class="input-group">
      <span class="input-group-addon" i18n:translate="">Months</span>
      <input type="text" name="months" value="${months}"
             class="span2 form-control ${css_class or ''}"
             tal:attributes="style style"
             maxlength="4"
             id="${oid}"/>
    </div></div>
    <div class="col-xs-4"><div class="input-group">
      <span class="input-group-addon" i18n:translate="">Weeks</span>
      <input type="text" name="weeks" value="${weeks}"
             class="span2 form-control ${css_class or ''}"
             tal:attributes="style style"
             maxlength="2"
             id="${oid}-weeks"/>
    </div></div>
    <div class="col-xs-4"><div class="input-group">
      <span class="input-group-addon" i18n:translate="">Days</span>
      <input type="text" name="days" value="${days}"
             class="span2 form-control ${css_class or ''}"
             tal:attributes="style style"
             maxlength="2"
             id="${oid}-days"/>
    </div></div>
  </div>
  ${field.end_mapping()}
</div>
