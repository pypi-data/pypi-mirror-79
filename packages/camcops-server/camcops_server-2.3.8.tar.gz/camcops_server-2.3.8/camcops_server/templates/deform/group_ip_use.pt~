<div i18n:domain="deform"
      tal:omit-tag=""
      tal:define="oid oid|field.oid;
                  name name|field.name;
                  css_class css_class|field.widget.css_class;
                  style style|field.widget.style;">
  ${field.start_mapping()}
  <div class="row">
    <div class="checkbox">
      <label for="clinical">
        <input tal:define="name name|field.name;
                       true_val true_val|field.widget.true_val;
                       css_class css_class|field.widget.css_class;
                       style style|field.widget.style;
                       oid oid|field.oid"
           type="checkbox"
           name="clinical" value="${clinical}"
           id="${oid}-clinical"
           tal:attributes="checked clinical == True;
                           class css_class;
                           style style;
                           attributes|field.widget.attributes|{};" />

        <span tal:condition="hasattr(field, 'schema') and hasattr(field.schema, 'label')"
          tal:replace="field.schema.label" class="checkbox-label" >
        </span>

        </label>
      </div>
      <div class="checkbox">
        <label for="commercial">
          <input tal:define="name name|field.name;
                       true_val true_val|field.widget.true_val;
                       css_class css_class|field.widget.css_class;
                       style style|field.widget.style;
                       oid oid|field.oid"
           type="checkbox"
           name="commercial" value="${commercial}"
           id="${oid}"
           tal:attributes="checked cstruct == true_val;
                           class css_class;
                           style style;
                           attributes|field.widget.attributes|{};" />

          <span tal:condition="hasattr(field, 'schema') and hasattr(field.schema, 'label')"
            tal:replace="field.schema.label" class="checkbox-label" >
          </span>

        </label>
      </div>
      <div class="checkbox">
        <label for="${field.oid}">
          <input tal:define="name name|field.name;
                       true_val true_val|field.widget.true_val;
                       css_class css_class|field.widget.css_class;
                       style style|field.widget.style;
                       oid oid|field.oid"
           type="checkbox"
           name="${name}" value="${true_val}"
           id="${oid}"
           tal:attributes="checked cstruct == true_val;
                           class css_class;
                           style style;
                           attributes|field.widget.attributes|{};" />

          <span tal:condition="hasattr(field, 'schema') and hasattr(field.schema, 'label')"
            tal:replace="field.schema.label" class="checkbox-label" >
          </span>

        </label>
      </div>
      <div class="checkbox">
        <label for="${field.oid}">
          <input tal:define="name name|field.name;
                       true_val true_val|field.widget.true_val;
                       css_class css_class|field.widget.css_class;
                       style style|field.widget.style;
                       oid oid|field.oid"
           type="checkbox"
           name="${name}" value="${true_val}"
           id="${oid}"
           tal:attributes="checked cstruct == true_val;
                           class css_class;
                           style style;
                           attributes|field.widget.attributes|{};" />

          <span tal:condition="hasattr(field, 'schema') and hasattr(field.schema, 'label')"
            tal:replace="field.schema.label" class="checkbox-label" >
          </span>

        </label>
      </div>
  </div>
  ${field.end_mapping()}
</div>
