    steps:
      - name: Checkout ğŸ›ï¸
        uses: actions/checkout@v2
        with:
          persist-credentials: false

      - name: Install and Build Docs ğŸ”§
        run: |
          pdoc3 --html cppcpyutils -o docs --force

      - name: Deploy ğŸš€
        uses: peaceiris/actions-gh-pages@v3.6.4
